<p id="notice"><%= notice %></p>

<h1>Listing Secondposts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secondposts.each do |secondpost| %>
      <tr>
        <td><%= secondpost.title %></td>
        <td><%= secondpost.content %></td>
        <td><%= secondpost.image %></td>
        <td><%= link_to 'Show', secondpost %></td>
        <td><%= link_to 'Edit', edit_secondpost_path(secondpost) %></td>
        <td><%= link_to 'Destroy', secondpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Secondpost', new_secondpost_path %>
